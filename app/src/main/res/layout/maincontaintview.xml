<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deg"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|bottom"
        android:text=""
        android:textColor="@color/mycolor"
        android:textSize="35sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="C"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnxqy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="xsqy"
                android:textAllCaps="false"
                android:textColor="#888383"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnpercentaile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="%"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="DEL"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnxy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="xy"
                android:textAllCaps="false"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnx2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="x2"
                android:textAllCaps="false"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="n!"
                android:textAllCaps="false"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndivider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="/"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="7"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="8"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="9"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnmul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="*"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="4"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="5"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="6"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnminus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="-"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="1"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="2"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:elevation="1dp"
                android:text="3"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="+"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnplusminus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="+/-"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:text="0"
                android:backgroundTint="@color/cardview_light_background"
                android:textColor="#888383"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C1C1"
                android:elevation="1dp"
                android:text="."
                android:textColor="#888383"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnequal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mycolor"
                android:elevation="1dp"
                android:text="="
                android:textColor="#F8F8F8"
                android:textSize="35sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>